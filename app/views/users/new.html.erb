<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form role="form" action="<%= users_path %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <input type="text" id="firstname" name="user[first_name]" placeholder="First Name" class="form-control" />
      <input type="text" id="lastname" name="user[last_name]" placeholder="Last Name" class="form-control" />

      <input type="email" id="email" name="user[email]" placeholder="Email" class="form-control" />

      <input type="password" id="password" name="user[password]" placeholder="Password" class="form-control" />
      <input type="password" id="password_confirmation" name="user[password_confirmation]" placeholder="Confirm Password" class="form-control" />

      <input class="btn btn-primary" type="submit" value="Sign Up" />
      <!-- <input class="btn btn-primary" type="button" value="Cancel" /> -->
    </form>
    <p>Already part of the Biz? <%= link_to "Sign In!", signin_path %></p>
  </div>
</div>
