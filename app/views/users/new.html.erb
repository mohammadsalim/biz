<h1>Sign Up</h1>

<form role="form" action="<%= users_path %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"
  <div class="form-group form-inline">
    <input type="text" id="firstname" name="user[first_name]" placeholder="First Name" class="form-control" />
    <input type="text" id="lastname" name="user[last_name]" placeholder="Last Name" class="form-control" />
  </div>
  <div class="form-group form-inline">
    <input type="email" id="email" name="user[email]" placeholder="Email" class="form-control" />
    <input type="password" id="password" name="user[password]" placeholder="Password" class="form-control" />
  </div>
  <input type="submit" value="Sign Up" />
  <input type="button" value="Cancel" />
</form>
